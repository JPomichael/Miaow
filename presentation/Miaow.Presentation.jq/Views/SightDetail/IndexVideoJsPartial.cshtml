@{
    var videoInfoService = iPow.Presentation.jq.iPowPreJqEngine.Current.Resolve<
        iPow.Application.jq.Service.IVideoInfoService>();

    var videoInfo = videoInfoService.GetVideoRandSingleBySight(ViewBag.parkid);
    if (videoInfo != null)
    {
        System.Text.StringBuilder flv = new System.Text.StringBuilder();
        var videoPath = "/Content/player/minPlay?id=" + videoInfo.VideoPath + videoInfo.VideoFile;
        videoPath = videoPath.Trim();
        Int32 flvCount = videoPath.LastIndexOf(".");
        if (flvCount > 0)
        {
            videoPath = videoPath.Substring(0, flvCount);
        }
    <script type="text/javascript">
        AC_FL_RunContent('codebase', 'http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,28,0', 'width', '254', 'height', '156', 'src', '@(videoPath)', 'quality', 'high', 'pluginspage', 'http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash', 'movie', '@(videoPath)'); 
    </script>
    <noscript>
        <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,28,0"
            width="254" height="156">
            <param name="movie" value="@(videoPath)" />
            <param name="quality" value="high" />
            <param name="wmode" value="opaque" />
            <embed src="@(videoPath)"
                quality="high" pluginspage="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash"
                type="application/x-shockwave-flash" width="254" height="156"></embed>
        </object>
    </noscript>
    }
    else
    { 
    @("暂无视频")
    }
}
