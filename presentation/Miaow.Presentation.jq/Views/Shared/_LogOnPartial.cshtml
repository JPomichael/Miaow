<style type="text/css">
    *
    {
        margin: 0;
        padding: 0;
    }
    li
    {
        list-style-type: none;
    }
    img
    {
        border: none;
    }
    .Topbar
    {
        width: 1003px;
        margin: 0 auto;
        background: #f5f5f5;
        border-bottom: solid 1px #b6bac0;
        height: 34px;
        font-size: 12px;
        color: #8b8b8b;
        line-height: 34px;
        font-weight: bold;
    }
    .Topbar_left
    {
        width: 400px;
        float: left;
        margin-left: 15px;
        display: inline;
    }
    .Topbar_left li img
    {
        margin: 8px 4px 0 0;
    }
    .Topbar_right
    {
        float: right;
        margin-right: 10px;
        display: inline;
    }
    .Topbar_left li .Topred
    {
        color: #F00;
    }
    .Topbar_left li, .Topbar_right li
    {
        float: left;
    }
    .Topbar_left li a, .Topbar_right li a
    {
        float: left;
        color: #8b8b8b;
        text-decoration: none;
        margin: 0 5px;
    }
    .IMGtop
    {
        margin: 6px 4px 0 0;
    }
</style>
</head>
<body>
    <div class="Topbar">
        <div class="Topbar_left">
            <ul>
                <li>
                    <img src="/images/ShouIcon.gif"></li>
                <li><a href="http://p.ipow.cn">手机版</a>|</li>
                <li>让旅行更轻松！</li>
                @{
                    if (Session[iPow.Infrastructure.Crosscutting.Comm.Service.ConstService.SessionNameCurrentUser] != null)
                    {
                        var user = Session[iPow.Infrastructure.Crosscutting.Comm.Service.ConstService.SessionNameCurrentUser] as iPow.Service.SSO.Client.AuthService.User;
                    <text>
                    <li> <span >欢迎<strong>@user.username</strong>@Html.ActionLink("退出", "logoff", "account",null ,  new { style = "float: none" }) </span> 
                    </li>
                    </text>
                    }
                    else
                    {
                        var loginUrl = iPow.Infrastructure.Crosscutting.Comm.Service.SsoService.GetSsoLogOnAndReturnUrl();
                    <li><a href="@(loginUrl)" class="Topred">请登录</a> | </li>
                    <li><a href="javascript:;">免费注册</a> </li>
                    }
                }
            </ul>
        </div>
