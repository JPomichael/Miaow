<script src="@Url.Content("~/Scripts/jquery.easing.1.3.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        var liH = $(".ul li").height();
        var lenLI = $(".ul li").length;

        //定时开始
        var timer;
        var ind = 0;
        var ulcon = $(".ul");
        $(".ul ul").hover(function () {
            clearInterval(timer);
        }, function () {
            timer = setInterval(function () {
                if (ind == lenLI - 1) {
                    ulcon.children("ul").animate({ top: 0 }, { duration: 600, easing: "easeInOutExpo" });
                    $(".page_g dl dd a").removeClass("abg");
                    $(".page_g dl dd a").eq(0).addClass("abg");
                    ind = 0;
                } else {
                    ind++;
                    ulcon.children("ul").animate({ top: -(ind * liH) }, { duration: 600, easing: "easeInOutExpo" });
                    $(".page_g dl dd a").removeClass("abg");
                    $(".page_g dl dd a").eq(ind).addClass("abg");
                }
            }, 5000);
        }).trigger("mouseleave");
        //$(".page_g").hover(function() { clearInterval(timer); });

        //循环
        $(".page_g dl dd").each(function (i) {
            $(this).click(function () {
                clearInterval(timer);
                $(".page_g dl dd a").removeClass("abg");
                $(this).children("a").addClass("abg");
                $(".ul ul").animate({ top: -(i * liH) }, 600, "easeInOutExpo", function () {
                    ind = i;
                    $(".ul ul").trigger("mouseleave");
                });
            });
        });
    })
</script>
