@using Telerik.Web.Mvc
@using Telerik.Web.Mvc.UI
@model iPow.Domain.Dto.Sys_MvcControllerClassDto
@{
    ViewBag.subtitle = "修改分类";
    ViewBag.title = "修改分类";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset class="module width_full">
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Remark)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Remark)
            @Html.ValidationMessageFor(model => model.Remark)
        </div>
        <div class="editor-label" style="float: left;">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field" style="clear: both; display: block;">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SortNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SortNum)
            @Html.ValidationMessageFor(model => model.SortNum)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="保存" />
    </p>
}