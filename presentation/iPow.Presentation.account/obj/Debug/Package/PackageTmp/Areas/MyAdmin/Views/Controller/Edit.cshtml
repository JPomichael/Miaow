@model iPow.Infrastructure.Crosscutting.Authorize.Dto.MvcControllerDto
@{
    ViewBag.subtitle = "编辑控制器";
    ViewBag.title = "编辑控制器";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset class="module width_full">
        <select id="ClassId" name="ClassId">
            <option value="-1">---请选择---</option>
            @{
    foreach (var item in ViewBag.Controllermodel)
    {
                <option value="@(item.Id)" >@(item.Name)
                </option>
    }
            }
        </select>
        <div class="editor-label">
            @Html.LabelFor(model => model.Remark)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Remark)
            @Html.ValidationMessageFor(model => model.Remark)
        </div>
        <div class="editor-label" style="float: left;">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>
        <div class="editor-label" style="clear: both; display: block;">
            @Html.LabelFor(model => model.SortNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SortNum)
            @Html.ValidationMessageFor(model => model.SortNum)
        </div>
        @Html.HiddenFor(model => model.Id)
    </fieldset>
    <p>
        <input type="submit" value="保存" />
    </p>
}