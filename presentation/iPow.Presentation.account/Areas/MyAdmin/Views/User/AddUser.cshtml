@model iPow.Domain.Dto.Sys_AdminUserDto
@{
    ViewBag.subtitle = "添加用户";
    ViewBag.title = "添加用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset class="module width_full">
        <div class="editor-label">
            @Html.LabelFor(model => model.username)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.username)
            @Html.ValidationMessageFor(model => model.username)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.truename)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.truename)
            @Html.ValidationMessageFor(model => model.truename)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.sex)
        </div>
        <div class="editor-field">
            @Html.DropDownList("sex", new[]{
                    new SelectListItem(){ Text = "--请选择--" ,Value =" "},
                    new SelectListItem(){ Text = "男" ,Value = "男"},
                    new SelectListItem(){ Text = "女" ,Value = "女"}        
           })
            @Html.ValidationMessageFor(model => model.sex)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.UserType)
        </div>
        <div class="editor-field">
            @if (Model.UserType != "")
            {
                @Html.DropDownList("UserType", new[]{
                    new SelectListItem(){ Text = "---请选择---" ,Value = " "},
                    new SelectListItem(){ Text = "超级管理员" ,Value = "cg" , Selected =Model.UserType == "超级管理员" ? true : false },
                    new SelectListItem(){ Text = "系统管理员" ,Value = "xg", Selected =Model.UserType == "系统管理员" ? true : false },
                    new SelectListItem(){ Text = "普通管理员" ,Value = "pg", Selected =Model.UserType == "普通管理员" ? true : false },
                    new SelectListItem(){ Text = "景区用户" ,Value = "jq", Selected =Model.UserType == "景区用户" ? true : false },
                    new SelectListItem(){ Text = "酒店用户" ,Value = "jd", Selected =Model.UserType == "酒店用户" ? true : false },
                    new SelectListItem(){ Text = "手机用户" ,Value = "sj", Selected =Model.UserType == "手机用户" ? true : false },   
                    new SelectListItem(){ Text = "旅行社用户" ,Value = "lxs", Selected =Model.UserType == "旅行社用户" ? true : false },
                    new SelectListItem(){ Text = "新浪用户" ,Value = "xl", Selected =Model.UserType == "新浪用户" ? true : false },
                    new SelectListItem(){ Text = "腾讯用户" ,Value = "tx", Selected =Model.UserType == "腾讯用户" ? true : false }
           })
            }
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="添加用户" onclick="return CheckForm();" />
        @Html.ActionLink("Back to List", "Index")
    </p>
}
<div>
</div>
<script type="text/javascript">
    function CheckForm() {
        var UserSex = $("#sex").val();
        var UserType = $("#UserType").val();
        var UserName = $("username").val();
        var PassWord = $("password").val();
        if (UserType == " " || UserSex == " " || UserName == " " || PassWord == " ") {
            alert('选择不能为空！');
            return false;
        }
        else {
            return true;
        }
    }
</script>
