@{
    if (Session[Miaow.Infrastructure.Crosscutting.Comm.Service.ConstService.SessionNameCurrentUser] != null)
    {
        var user = Session[Miaow.Infrastructure.Crosscutting.Comm.Service.ConstService.SessionNameCurrentUser] as Miaow.Service.SSO.Client.AuthService.User;
    <text>Welcome <strong>@user.username</strong>! [ @Html.ActionLink("退出", "logoff", "account")]</text>
    }
    else
    {
        var loginUrl = Miaow.Infrastructure.Crosscutting.Comm.Service.SsoService.GetSsoLogOnAndReturnUrl();
    <a href = "@(loginUrl)">我要登陆</a>
    }
}
