<script type="text/javascript">

    $(function () {
        var window = $("#Window").data("tWindow");
        window.center();
    })
    
    $(function () {
        var days = $("#days").val();
        var city = $("#city").val();
        var tourTitle = $("#tourTitle").val();

        $(":input[data-autocomplete]").each(function () {
            $(this).autocomplete({
                source: $(this).attr("data-autocomplete")
            });
        });

        $("#tourTitle").focus(function () {
            if (this.value == "输入行程名称") {
                $("#tourTitle").val("");
            }
        }).blur(function () {
            if (this.value == "") {
                $("#tourTitle").val("输入行程名称");
            }
        });

        $("#city").focus(function () {
            if (this.value == "输入目的地") {
                $("#city").val("");
            }
        }).blur(function () {
            if (this.value == "") {
                $("#city").val("输入目的地");
            }
        });
    });

    //检验City 是否存在
    function checkcity() {
