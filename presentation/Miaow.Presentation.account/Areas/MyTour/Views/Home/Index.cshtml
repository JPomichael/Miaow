        var des = $("#city").val();

        if (des == "" || des == "输入目的地" || checkcity() == true) {
            alert("目的地不合法！");
            return false;
        }
        if ($("#tourTitle").val() == "" || $("#tourTitle").val() == "输入行程名称") {
            alert("行程不能为空或不能为提示语！");
            return false;
        }
        if ($("#txtComeTime").val() == "" || $("#txtComeTime").val() == "输入行程日期") {
            alert("时间不能为空或不能为提示语！");
            return false;
        }
        if (days == "" || isNaN(days) == true) {
