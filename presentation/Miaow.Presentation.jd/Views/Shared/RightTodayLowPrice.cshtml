@{
    try
    {
        Miaow.function.LocationInfo li = Miaow.function.LocationFucntion.LocationInfo();
        if (li != null)
        {
            IQueryable<Miaow.jd.Models.RightTodayLowerPriceAndHoteHotel> hp = Miaow.jd.Bll.RightTodayLowPrice.GetRihtTodayLowPrice(li.City, 5);
            if (hp != null)
            {
                foreach (var item in hp)
                {
    <ul>
        <li><a href="/hotel/@(item.IdentityId)" class="aRightList" target="_blank"
            title="@item.HotelName"><span>@(item.HotelName.Length > 12 ? item.HotelName.Substring(0, 12) : item.HotelName)</span>
            <em><font class="font16">￥@(item.MinPrice)/</font><font class="font12">起</font></em>
        </a></li>
    </ul>         
                }
            }
            else
            {
    <ul>
    </ul>
            }
        }
    }
    catch (Exception ex)
    {
    @ex.Message
    }
}
